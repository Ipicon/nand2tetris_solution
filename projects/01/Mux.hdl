/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=notSel);
    And(a=a, b=notSel, out=firstCheck);
    And(a=b, b=sel, out=secondCheck);
    Or(a=firstCheck, b=secondCheck, out=out);
}